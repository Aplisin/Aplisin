{% import 'admin/macro.html.twig' as admin_macro %}
{% extends 'admin/main.html.twig' %}

{% set menu = 'admin_user_manage' %}

{% block page_title %}
  <i class="fa fa-table"></i>
  {{ 'User Manage'|trans }}
{% endblock %}

{% block main_body %}
  <div class="table-responsive">
    <table class="table table-striped table table-bordered">
      <thead>
      <tr>
        <th>{{ 'Username'|trans }}</th>
        <th>{{ 'Email'|trans }}</th>
        <th>{{ 'Register Time'|trans }}</th>
        <th>Header</th>
      </tr>
      </thead>
      <tbody>
      {% for user in users %}
        {% include 'admin/user/table-tr.html.twig' %}
      {% endfor %}
      </tbody>
    </table>
  </div>

  {{ admin_macro.paginator(paginator, paginatorBag) }}
{% endblock %}
