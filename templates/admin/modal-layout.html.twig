{% include 'admin/css_loader.html.twig' %}

<div id="cd-modal-dialog" class="cd-modal-dialog {{ modal_class|default(null) }}" >
  {% block modal_content %}
    <div class="modal-content">
      {% block modal_header %}
        <div class="modal-header">
          <button type="button" class="close" data-toggle="cd-modal-cancel" aria-hidden="true">
            <i class="cd-icon cd-icon-close"></i>
          </button>
          <h4 class="modal-title">{% block title %}{% endblock %}</h4>
        </div>
      {% endblock %}
      <div class="modal-body">
        <div class="cd-dark-major">
          {% block modal_body %}{% endblock %}</div>
      </div>
      {% if not hide_footer|default(false) %}
        <div class="modal-footer">{% block modal_footer %}{% endblock %}</div>
      {% endif %}
    </div>
  {% endblock %}
  {% include 'admin/js_loader_async.html.twig' %}
</div>
